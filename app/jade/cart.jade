				.order-details.wrapper
					.section
						h5 USE COUPON CODE
						p Enter your coupon code here
						.form-group.wrapper
							input.small(type='text' id='coupon-code' placeholder='Coupon code')
							button.green-button.small-button APPLY
					.section
						h5 USE GIFT VOUCHER
						p Enter your gift voucher code here
						.form-group.wrapper
							input.small(type='text' placeholder='Gift voucher code')
							button.green-button.small-button APPLY
					.section
						h5 SHIPPING AVAILABILITY
						p Select country
						select.medium
							option(disabled selected) Country
							option Ukraine
							option USA
							option Canada
						p Select state
