		#sign-in.modal.fade(tabindex='-1', role='dialog', aria-hidden='true')
			.modal-dialog(role='document')
				.modal-content
					.modal-header
						a.logo(href='#')
							span.bold RENOSHOP
							span BEE
						button.close(type='button', data-dismiss='modal', aria-label='Close')
							span(aria-hidden='true') ×
					.modal-body
						p Enter your credentials to sign in.
						input.small(type='text' id='sign-in-email' placeholder='E-mail')
						input.small(type='text' id='sign-in-password' placeholder='Password')
						p
							input(type='checkbox')
							| Remember me?
					.modal-footer
						a(href='#')
							.button.green-button.small-button SIGN IN

		#sign-up.modal.fade(tabindex='-1', role='dialog', aria-hidden='true')
			.modal-dialog(role='document')
				.modal-content
					.modal-header
						a.logo(href='#')
							span.bold RENOSHOP
							span BEE
						button.close(type='button', data-dismiss='modal', aria-label='Close')
							span(aria-hidden='true') ×
					.modal-body
						p Enter your credentials to create a new account.
						input.small(type='text' id='sign-up-first-name' placeholder='First Name')
						input.small(type='text' id='sign-up-last-name' placeholder='Last Name')
						input.small(type='text' id='sign-up-phone' placeholder='Phone')
						input.small(type='text' id='sign-up-email' placeholder='E-mail')
						input.small(type='text' id='sign-up-password' placeholder='Password')
						input.small(type='text' id='sign-up-repeat-password' placeholder='Repeat password')
					.modal-footer
