		main
			.container
				ul.breadcrumbs
					li
						a(href='#') Home
					li
						a(href='#') Shop
					li
						a(href='#') Checkout
				.order-details.wrapper
					.section
						h5 BILLING DETAILS
						p.important First Name and Last Name
						.form-group.wrapper
							input.small(type='text' id='first-name')
							input.small(type='text' id='last-name')
						p.important Country
						select.medium
							option(disabled selected) Country
							option Ukraine
							option USA
							option Canada
						p Company Name
						input.small(type='text' id='company' placeholder='First Name')
						p.important Address
						input.small(type='text' id='address' placeholder='Street address')
						p Postcode/Zip
						input.small(type='number' id='postcode' placeholder='Postcode/Zip')
						p.important Town/City
						input.small(type='text' id='town' placeholder='Town/City')
						p.important E-mail Address
						input.small(type='text' id='e-mail')
						p.important Phone
						input.small(type='text' id='phone')
					.section
						.calculation.wrapper
							h5 YOUR ORDER
							.wrapper
								p Product:
								p Total
							hr
							.wrapper
								p Casual men wearing cool shoe x 1
								p $120
							.wrapper
								p Casual men wearing x 2
								p $280
							hr
							.wrapper
								p Subtotal
								p $400
							.wrapper
								p Shipping
								p Free Shipping
							hr
							.wrapper.bold
								p Total
								p $400
							hr
							.payment
								p
									input(type='radio' name='payment')
									| Direct Bank Transfer
								p.hint Make your payment directly into our bank account. Please use yur Order ID as the payment reference. Your order won't be shipped until the funds have cleared in our account.
								p
									input(type='radio' name='payment')
									| Cheque Payment
								p
									input(type='radio' name='payment')
									| PayPal
				.order-controls.wrapper
					p
						input(type='checkbox')
						| Create an account?
					button.green-button.small-button PROCEED TO CHECKOUT
		footer
			.top-section
				.container.wrapper
					.wrapper
						p We're confident we've provided all the best for you. Stay connect with us.
